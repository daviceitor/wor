<h1><%=@post.title%></h1>

<% @post.classifiers.tags.each do |tag| %>
  <%=link_to tag.name, tag_path(tag)%>
<% end %>

<i><%=@post.classifiers%></i>

<% @post.classifiers.categories.each do |category| %>
  <%=link_to category.name, category_path(category)%>
<% end %>


<%=simple_format(@post.content).html_safe%>
